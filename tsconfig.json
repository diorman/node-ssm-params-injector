{
  "include": ["./lib", "./test"],
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "target": "es2017",
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "lib": ["es5", "es2017"],
    "sourceMap": true,
    "strict": true,
    "types": ["node", "jest"],
    "downlevelIteration": true,
    "esModuleInterop": true,
    "declaration": true
  }
}
